{% extends 'base.html.twig' %}

{% block title %}Nurses index{% endblock %}

{% block body %}
    <h1>Nurses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nurse in nurses %}
            <tr>
                <td>{{ nurse.id }}</td>
                <td>{{ nurse.user }}</td>
                <td>{{ nurse.password }}</td>
                <td>
                    <a href="{{ path('app_nurses_show', {'id': nurse.id}) }}">show</a>
                    <a href="{{ path('app_nurses_edit', {'id': nurse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_nurses_new') }}">Create new</a>
{% endblock %}
